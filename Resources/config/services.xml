<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="c6ril_payment_sips.client.class">c6ril\PaymentSipsBundle\Client\Client</parameter>
        <parameter key="c6ril_payment_sips.return_handler.class">c6ril\PaymentSipsBundle\Plugin\ReturnHandler</parameter>
        <parameter key="c6ril_payment_sips.plugin.class">c6ril\PaymentSipsBundle\Plugin\SipsPlugin</parameter>
    </parameters>

    <services>
        <service id="c6ril_payment_sips.client" class="%c6ril_payment_sips.client.class%">
            <argument type="service" id="logger" />
            <argument>%c6ril_payment_sips.bin%</argument>
            <argument>%c6ril_payment_sips.config%</argument>
        </service>

        <service id="c6ril_payment_sips.return_handler" class="%c6ril_payment_sips.return_handler.class%">
            <argument type="service" id="payment.plugin_controller" />
        </service>

        <service id="c6ril_payment_sips.plugin" class="%c6ril_payment_sips.plugin.class%">
            <tag name="payment.plugin" />
            <argument type="service" id="logger" />
        </service>
    </services>

</container>
